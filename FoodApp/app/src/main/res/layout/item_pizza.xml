<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp"
    android:background="@drawable/sp_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/itempizza_image"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="3"
            android:padding="10dp"
            android:src="@drawable/baseline_media_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itempizza_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ten san pham"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itempizza_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Giá: 200000"
                android:textColor="#E91E63"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itempizza_mota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mô tả: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>